DROP DATABASE IF EXISTS HW4;
CREATE DATABASE HW4;

USE HW4;

DROP TABLE IF EXISTS shops;
CREATE TABLE `shops` (
	`id` INT,
    `shopname` VARCHAR (100),
   PRIMARY KEY (id) 
);

DROP TABLE IF EXISTS cats;
CREATE TABLE `cats` (
	`name` VARCHAR (100),
    `id` INT,
    PRIMARY KEY (id),
    shops_id INT,
    CONSTRAINT fk_cats_shops_id FOREIGN KEY (shops_id)
        REFERENCES `shops` (id) 
); 
INSERT INTO `shops`
